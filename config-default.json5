{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Base renovate config",
  "extends": [
    "config:recommended",
    "schedule:daily",
    ":assignee(bryanforbes)",
    ":timezone(America/Chicago)",
    ":combinePatchMinorReleases",
    ":enableVulnerabilityAlerts",
    ":semanticCommits",
    ":semanticPrefixChore",
    ":configMigration"
  ],
  "ignorePresets": [
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "minimumReleaseAge": "1 days",
  "internalChecksFilter": "strict",
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "*"
      ],
      "semanticCommitScope": "dev"
    },
    {
      "matchDepTypes": [
        "dependencies",
        "require"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "matchDepTypes": [
        "compile",
        "provided",
        "runtime",
        "system",
        "import",
        "parent"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "matchDepTypes": [
        "project.dependencies",
        "project.optional-dependencies"
      ],
      "matchManagers": [
        "pep621"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "matchDepTypes": [
        "dependencies",
        "extras"
      ],
      "matchManagers": [
        "poetry"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "matchJsonata": [
        "isLockFileMaintenance = true"
      ],
      "semanticCommitScope": "lock"
    }
  ]
}
